{# MACRO #}

{% macro item( glob, grid, img, link = '', utm = '', img_ext = '' ) %}

	{% set num_per_page = '' %}

	{% set lang = glob.lang_code %}
	{% set tracker = glob.nlt_tracker %}

	{% if not img_ext %}
		{% set img_ext = 'jpg' %}
	{% endif %}

	{% if not utm %}
		{% set utm = img %}
	{% endif %}

	{% if link starts with 'startpage' %}
		{% set link = '/control/main' %}
	{% endif %}

	{% if link starts with '/control/category/~category_id=' %}
		{% set num_per_page = 'numPerPage=48&' %}
	{% endif %}

	{% if img starts with 'gift' %}
		{% set link = '/control/dynpage/~struct=gift' %}
	{% endif %}


	{% if grid == 'row' %}<tr><td class="main-content">{% endif %}
	{% if grid == 'col start' %}<tr><td><table class="template-wrapper" cellspacing="0" cellpadding="0" align="center" border="0"><tr>{% endif %}
	{% if grid starts with 'col' %}<td class="main-content">{% endif %}

	{% if link starts with 'http' %}

		{# External link #}

		<a href="{{ link }}">
			<img class="realimg" align="top" src="images/content/{{ img }}.{{ img_ext }}" alt="{{ utm }}" width="100%" border="0" /></a>

	{% elseif link starts with 'imgonly' %}

		{# No link #}

		<img class="realimg" align="top" src="images/content/{{ img }}.{{ img_ext }}" alt="{{ utm }}" width="100%" border="0" />

	{% else %}

		{# Internal link #}

		<a href="https://m.yves-rocher.{{ lang }}{{ link }}?shopId=NLT&{{ num_per_page|raw }}utm_source=newsletter&utm_medium=email&utm_campaign=nlt_{{ tracker }}&utm_content={{ utm }}">
			<img class="realimg" align="top" src="images/content/{{ img }}.{{ img_ext }}" alt="{{ utm }}" width="100%" border="0" /></a>

	{% endif %}

	{% if grid starts with 'col' %}</td>{% endif %}
	{% if grid == 'col end' %}</tr></table></td></tr>{% endif %}
	{% if grid == 'row' %}</td></tr>{% endif %}

{% endmacro %}
